<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF"/> <!-- 스피너의 배경색 설정 -->
                    <stroke android:color="#000000" android:width="1dp"/> <!-- 테두리 색상 및 두께 설정 -->
                    <corners android:radius="4dp"/> <!-- 테두리 모서리 둥글게 설정 (원하는대로 조절 가능) -->

                </shape>
            </item>
        </layer-list>
    </item>
</selector>