<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText, SpUsage">

    <data>
        <variable
            name="vm"
            type="com.snd.app.ui.management.pest.ManagementPestViewModel" />
    </data>
    <!--InputPestInfoDialogFragment-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="10dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pest_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_my"
            android:padding="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pest_dialog_name_tv"
                style="@style/tree_info_label"
                android:layout_marginTop="20dp"
                android:text="병충해명"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"/>

            <Spinner
                android:id="@+id/pest_dialog_spinner"
                style="@style/tree_info_edt"
                android:background="@drawable/spinner_border"
                android:textColor="@color/cocoa_brown"
                android:onItemSelected="@{vm::onPestItemSelected}"
                app:layout_constraintEnd_toEndOf="@id/pest_dialog_name_tv"
                app:layout_constraintStart_toStartOf="@id/pest_dialog_name_tv"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_name_tv"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pest_dialog_name"
                style="@style/tree_info_edt"
                android:completionThreshold="0"
                android:hint="병충해명을 입력하세요"
                android:text="@{vm.pest}"
                android:longClickable="false"
                app:layout_constraintEnd_toEndOf="@id/pest_dialog_spinner"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/pest_dialog_spinner"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_spinner"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pest_dialog_occurred_tv"
                style="@style/tree_info_label"
                android:layout_marginTop="20dp"
                android:text="발생일"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_name"
                tools:ignore="MissingConstraints"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pest_dialog_occurred"
                style="@style/tree_info_edt"
                android:completionThreshold="0"
                android:longClickable="false"
                android:hint="발생일을 선택해주세요."
                android:text="@{vm.occurred}"
                app:layout_constraintEnd_toEndOf="@id/pest_dialog_occurred_tv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/bt_occurred"
                app:layout_constraintStart_toStartOf="@id/pest_dialog_occurred_tv"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_occurred_tv"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_occurred"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="날짜선택"
                android:layout_marginTop="10dp"
                android:onClick="@{()->vm.onDatePick()}"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_occurred_tv"
                app:layout_constraintEnd_toEndOf="@+id/pest_dialog_occurred_tv"
                app:layout_constraintStart_toEndOf="@+id/pest_dialog_occurred"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pest_dialog_severity_tv"
                style="@style/tree_info_label"
                android:layout_marginTop="20dp"
                android:text="심각도"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_occurred"
                tools:ignore="MissingConstraints"/>

            <Spinner
                android:id="@+id/pest_dialog_severity_spinner"
                style="@style/tree_info_edt"
                android:background="@drawable/spinner_border"
                android:textColor="@color/cocoa_brown"
                android:onItemSelected="@{vm::onSeverityItemSelected}"
                app:layout_constraintEnd_toEndOf="@id/pest_dialog_severity_tv"
                app:layout_constraintStart_toStartOf="@id/pest_dialog_severity_tv"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_severity_tv"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pest_dialog_recovered_tv"
                style="@style/tree_info_label"
                android:layout_marginTop="20dp"
                android:text="완치일"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_severity_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pest_dialog_recovered"
                style="@style/tree_info_edt"
                android:completionThreshold="0"
                android:longClickable="false"
                android:visibility="gone"
                android:text="@{vm.recovered}"
                app:layout_constraintEnd_toEndOf="@id/pest_dialog_recovered_tv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/pest_dialog_recovered_tv"
                app:layout_constraintTop_toBottomOf="@id/pest_dialog_recovered_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>