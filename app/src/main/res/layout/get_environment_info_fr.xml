<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText" >

    <data>
        <variable
            name="getEnvironmentVM"
            type="com.snd.app.ui.read.GetEnvironmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white" >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <!-- 텍스트폼을 전체 감싸는 레이아웃 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/get_enviroment_text_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_my"
                    tools:ignore="MissingConstraints">

                    <!-- 조회모드 레이아웃 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/get_enviroment_read_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        tools:ignore="MissingConstraints">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_environment_no_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="12dp"
                            android:text="일련번호"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_environment_sr_no"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.nfc}"
                            app:layout_constraintEnd_toEndOf="@id/read_get_environment_no_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_environment_no_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_environment_no_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_grd_fr_width_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="보호틀크기(가로)"
                            app:layout_constraintEnd_toStartOf="@id/read_get_grd_fr_height_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/read_get_environment_sr_no" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_grd_fr_width"
                            style="@style/tree_info_edt"
                            android:paddingEnd="50dp"
                            android:text="@{getEnvironmentVM.frameHorizontal}"
                            app:layout_constraintEnd_toEndOf="@id/read_get_grd_fr_width_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_grd_fr_width_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_grd_fr_width_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_grd_fr_width_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/read_get_grd_fr_width"
                            app:layout_constraintEnd_toEndOf="@id/read_get_grd_fr_width"
                            app:layout_constraintTop_toTopOf="@id/read_get_grd_fr_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_grd_fr_height_label"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="보호틀크기(세로)"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/read_get_grd_fr_width_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_environment_sr_no" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_grd_fr_height"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.frameVertical}"
                            android:nextFocusForward="@+id/read_get_environment_material"
                            app:layout_constraintEnd_toEndOf="@id/read_get_grd_fr_height_label"
                            app:layout_constraintStart_toStartOf="@id/read_get_grd_fr_height_label"
                            app:layout_constraintTop_toBottomOf="@id/read_get_grd_fr_height_label" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_grd_fr_height_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/read_get_grd_fr_height"
                            app:layout_constraintEnd_toEndOf="@id/read_get_grd_fr_height"
                            app:layout_constraintTop_toTopOf="@id/read_get_grd_fr_height" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_environment_material_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="12dp"
                            android:text="보호틀 재질"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/read_get_grd_fr_height" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_environment_material"
                            style="@style/tree_info_edt"
                            android:inputType="text"
                            android:text="@{getEnvironmentVM.frameMaterial}"
                            android:nextFocusForward="@+id/get_boundary_stone"
                            app:layout_constraintEnd_toEndOf="@id/read_get_environment_material_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_environment_material_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_environment_material_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_boundary_stone_tv"
                            style="@style/tree_info_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="경계석"
                            app:layout_constraintTop_toBottomOf="@id/read_get_environment_material"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_boundary_stone"
                            style="@style/tree_info_edt"
                            android:inputType="text"
                            android:text="@{getEnvironmentVM.boundaryStone}"
                            android:nextFocusForward="@+id/get_boundary_stone"
                            app:layout_constraintEnd_toEndOf="@id/read_get_boundary_stone_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_boundary_stone_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_boundary_stone_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_road_width_tv"
                            style="@style/tree_info_label"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="도로폭"
                            tools:ignore="MissingConstraints"
                            app:layout_constraintEnd_toStartOf="@+id/read_get_sidewalk_width_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/read_get_boundary_stone"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_road_width"
                            style="@style/tree_info_edt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{getEnvironmentVM.roadWidth}"
                            app:layout_constraintEnd_toEndOf="@id/read_get_road_width_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_road_width_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_road_width_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_road_width_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/read_get_road_width"
                            app:layout_constraintEnd_toEndOf="@id/read_get_road_width"
                            app:layout_constraintTop_toTopOf="@id/read_get_road_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_sidewalk_width_label"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/tree_info_label"
                            android:text="인도폭"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/read_get_road_width_tv"
                            app:layout_constraintTop_toBottomOf="@+id/read_get_boundary_stone"
                            tools:ignore="MissingConstraints,NotSibling" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_sidewalk_width"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.sideWalkWidth}"
                            app:layout_constraintEnd_toEndOf="@id/read_get_sidewalk_width_label"
                            app:layout_constraintStart_toStartOf="@id/read_get_sidewalk_width_label"
                            app:layout_constraintTop_toBottomOf="@id/read_get_sidewalk_width_label" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_sidewalk_width_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/read_get_sidewalk_width"
                            app:layout_constraintEnd_toEndOf="@id/read_get_sidewalk_width"
                            app:layout_constraintTop_toTopOf="@id/read_get_sidewalk_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_packing_material_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="5dp"
                            android:text="포장재"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/read_get_sidewalk_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_packing_material"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.packingMaterial}"
                            app:layout_constraintEnd_toEndOf="@id/read_get_packing_material_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_packing_material_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_packing_material_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_soil_ph_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="토양 산성도"
                            app:layout_constraintEnd_toStartOf="@id/read_get_soil_density_tv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/read_get_packing_material" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_soil_ph"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.soilPH}"
                            app:layout_constraintEnd_toEndOf="@id/read_get_soil_ph_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_soil_ph_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_soil_ph_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_soil_ph_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="ph"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/read_get_soil_ph"
                            app:layout_constraintEnd_toEndOf="@id/read_get_soil_ph"
                            app:layout_constraintTop_toTopOf="@id/read_get_soil_ph" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_soil_density_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="토양 견밀도"
                            android:inputType="numberDecimal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/read_get_soil_ph_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_packing_material" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_soil_density"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.soilDensity}"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintEnd_toEndOf="@id/read_get_soil_density_tv"
                            app:layout_constraintStart_toStartOf="@id/read_get_soil_density_tv"
                            app:layout_constraintTop_toBottomOf="@id/read_get_soil_density_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/read_get_soil_density_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="㎏/㎤"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/read_get_soil_density"
                            app:layout_constraintEnd_toEndOf="@id/read_get_soil_density"
                            app:layout_constraintTop_toTopOf="@id/read_get_soil_density" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- ./조회모드 레이아웃 -->


                    <!-- 수정모드 레이아웃 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/get_enviroment_eidt_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        tools:ignore="MissingConstraints">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_environment_sr_no_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="12dp"
                            android:text="일련번호"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_environment_sr_no"
                            style="@style/tree_info_edt"
                            android:text="@{getEnvironmentVM.nfc}"
                            app:layout_constraintEnd_toEndOf="@id/get_environment_sr_no_tv"
                            app:layout_constraintStart_toStartOf="@id/get_environment_sr_no_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_environment_sr_no_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_grd_fr_width_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="보호틀크기(가로)"
                            app:layout_constraintEnd_toStartOf="@id/get_grd_fr_height_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/get_environment_sr_no" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_grd_fr_width"
                            style="@style/tree_info_edt"
                            android:inputType="numberDecimal"
                            android:longClickable="false"
                            android:nextFocusForward="@+id/get_grd_fr_height"
                            android:paddingEnd="50dp"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:text="@{getEnvironmentVM.frameHorizontal}"
                            app:layout_constraintEnd_toEndOf="@id/get_grd_fr_width_tv"
                            app:layout_constraintStart_toStartOf="@id/get_grd_fr_width_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_grd_fr_width_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_grd_fr_width_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/get_grd_fr_width"
                            app:layout_constraintEnd_toEndOf="@id/get_grd_fr_width"
                            app:layout_constraintTop_toTopOf="@id/get_grd_fr_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_grd_fr_height_label"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="보호틀크기(세로)"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/get_grd_fr_width_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_environment_sr_no" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_grd_fr_height"
                            style="@style/tree_info_edt"
                            android:inputType="numberDecimal"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:text="@{getEnvironmentVM.frameVertical}"
                            android:nextFocusForward="@+id/get_environment_material"
                            app:layout_constraintEnd_toEndOf="@id/get_grd_fr_height_label"
                            app:layout_constraintStart_toStartOf="@id/get_grd_fr_height_label"
                            app:layout_constraintTop_toBottomOf="@id/get_grd_fr_height_label" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_grd_fr_height_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/get_grd_fr_height"
                            app:layout_constraintEnd_toEndOf="@id/get_grd_fr_height"
                            app:layout_constraintTop_toTopOf="@id/get_grd_fr_height" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_environment_material_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="12dp"
                            android:text="보호틀 재질"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/get_grd_fr_height" />

                        <Spinner
                            android:id="@+id/get_environment_material_state"
                            style="@style/tree_info_edt"
                            android:inputType="text"
                            android:paddingEnd="50dp"
                            android:textColor="@color/cocoa_brown"
                            android:background="@drawable/spinner_border"
                            android:onItemSelected="@{getEnvironmentVM::onFrameMaterialItemSelected}"
                            app:layout_constraintEnd_toEndOf="@id/get_environment_material_tv"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@id/get_environment_material_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_environment_material_tv" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_environment_material"
                            style="@style/tree_info_edt"
                            android:inputType="text"
                            android:text="@{getEnvironmentVM.frameMaterial}"
                            android:nextFocusForward="@+id/get_boundary_stone"
                            app:layout_constraintEnd_toEndOf="@id/get_environment_material_state"
                            app:layout_constraintStart_toStartOf="@id/get_environment_material_state"
                            app:layout_constraintTop_toBottomOf="@id/get_environment_material_state" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_boundary_stone_tv"
                            style="@style/tree_info_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="경계석"
                            app:layout_constraintTop_toBottomOf="@id/get_environment_material"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <Spinner
                            android:id="@+id/get_boundary_stone_tv_state"
                            style="@style/tree_info_edt"
                            android:inputType="text"
                            android:textColor="@color/cocoa_brown"
                            android:background="@drawable/spinner_border"
                            android:onItemSelected="@{getEnvironmentVM::onBoundaryStoneItemSelected}"
                            app:layout_constraintEnd_toEndOf="@id/get_boundary_stone_tv"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@id/get_boundary_stone_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_boundary_stone_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_road_width_tv"
                            style="@style/tree_info_label"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="도로폭"
                            tools:ignore="MissingConstraints"
                            app:layout_constraintEnd_toStartOf="@+id/get_sidewalk_width_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/get_boundary_stone_tv_state"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_road_width"
                            style="@style/tree_info_edt"
                            android:layout_width="0dp"
                            android:inputType="numberDecimal"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:text="@{getEnvironmentVM.roadWidth}"
                            android:layout_height="wrap_content"
                            android:nextFocusForward="@+id/get_sidewalk_width"
                            app:layout_constraintEnd_toEndOf="@id/get_road_width_tv"
                            app:layout_constraintStart_toStartOf="@id/get_road_width_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_road_width_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_road_width_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/get_road_width"
                            app:layout_constraintEnd_toEndOf="@id/get_road_width"
                            app:layout_constraintTop_toTopOf="@id/get_road_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_sidewalk_width_label"
                            style="@style/tree_info_label"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="인도폭"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/get_road_width_tv"
                            app:layout_constraintTop_toBottomOf="@+id/get_boundary_stone_tv_state"
                            tools:ignore="MissingConstraints,NotSibling" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_sidewalk_width"
                            style="@style/tree_info_edt"
                            android:layout_width="0dp"
                            android:inputType="numberDecimal"
                            android:hint="0"
                            android:text="@{getEnvironmentVM.sideWalkWidth}"
                            android:nextFocusForward="@+id/get_packing_material"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="@id/get_sidewalk_width_label"
                            app:layout_constraintStart_toStartOf="@id/get_sidewalk_width_label"
                            app:layout_constraintTop_toBottomOf="@id/get_sidewalk_width_label" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_sidewalk_width_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="m"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/get_sidewalk_width"
                            app:layout_constraintEnd_toEndOf="@id/get_sidewalk_width"
                            app:layout_constraintTop_toTopOf="@id/get_sidewalk_width" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_packing_material_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="5dp"
                            android:text="포장재"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/get_sidewalk_width" />

                        <Spinner
                            android:id="@+id/get_packing_material_list"
                            style="@style/tree_info_edt"
                            android:inputType="text"
                            android:textColor="@color/cocoa_brown"
                            android:background="@drawable/spinner_border"
                            android:onItemSelected="@{getEnvironmentVM::onPackingMaterialItemSelected}"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintEnd_toEndOf="@id/get_packing_material_tv"
                            app:layout_constraintStart_toStartOf="@id/get_packing_material_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_packing_material_tv" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_packing_material"
                            style="@style/tree_info_edt"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:text="@{getEnvironmentVM.packingMaterial}"
                            android:nextFocusForward="@+id/get_soil_ph"
                            app:layout_constraintEnd_toEndOf="@id/get_packing_material_list"
                            app:layout_constraintStart_toStartOf="@id/get_packing_material_list"
                            app:layout_constraintTop_toBottomOf="@id/get_packing_material_list" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_soil_ph_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="토양 산성도"
                            app:layout_constraintEnd_toStartOf="@id/get_soil_density_tv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/get_packing_material" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_soil_ph"
                            style="@style/tree_info_edt"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:text="@{getEnvironmentVM.soilPH}"
                            android:nextFocusForward="@+id/get_soil_density"
                            android:inputType="numberDecimal"
                            app:layout_constraintEnd_toEndOf="@id/get_soil_ph_tv"
                            app:layout_constraintStart_toStartOf="@id/get_soil_ph_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_soil_ph_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_soil_ph_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="ph"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/get_soil_ph"
                            app:layout_constraintEnd_toEndOf="@id/get_soil_ph"
                            app:layout_constraintTop_toTopOf="@id/get_soil_ph" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_soil_density_tv"
                            style="@style/tree_info_label"
                            android:layout_marginTop="10dp"
                            android:text="토양 견밀도"
                            android:inputType="numberDecimal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/get_soil_ph_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_packing_material" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/get_soil_density"
                            style="@style/tree_info_edt"
                            android:hint="0"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:text="@{getEnvironmentVM.soilDensity}"
                            app:layout_constraintEnd_toEndOf="@id/get_soil_density_tv"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@id/get_soil_density_tv"
                            app:layout_constraintTop_toBottomOf="@id/get_soil_density_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/get_soil_density_suffix"
                            style="@style/tree_info_edt"
                            android:layout_marginEnd="10dp"
                            android:text="㎏/㎤"
                            android:textColor="@color/cocoa_brown_70"
                            app:layout_constraintBottom_toBottomOf="@id/get_soil_density"
                            app:layout_constraintEnd_toEndOf="@id/get_soil_density"
                            app:layout_constraintTop_toTopOf="@id/get_soil_density" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- ./수정모드 레이아웃 -->
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- ./텍스트폼을 전체 감싸는 레이아웃 -->


                <!--버튼박스-->
                <android.widget.LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/get_enviroment_text_form"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/get_environment_write_save"
                        style="@style/primary_button_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_cancle"
                        android:onClick="@{()->getEnvironmentVM.cancel()}"
                        android:text="취 소"
                        app:layout_constraintEnd_toStartOf="@id/get_environment_write_cancel"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/get_environment_write_cancel"
                        style="@style/edit_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="수정하기"
                        android:onClick="@{()-> getEnvironmentVM.save()}"
                        android:background="@drawable/button_regist"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/get_environment_write_save" />
                </android.widget.LinearLayout>
                <!--./버튼박스-->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>